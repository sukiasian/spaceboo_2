{
    "name": "frontend",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.36",
        "@fortawesome/free-solid-svg-icons": "^5.15.4",
        "@fortawesome/react-fontawesome": "^0.1.16",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "@types/jest": "^26.0.15",
        "@types/node": "^12.0.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/redux-saga": "^0.10.5",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-loading-spin": "^2.1.9",
        "react-redux": "^7.2.6",
        "react-router-dom": "^6.3.0",
        "react-scripts": "^5.0.0",
        "redux": "^4.1.2",
        "redux-saga": "^1.1.3",
        "typescript": "^4.1.2",
        "uuid": "^8.3.2",
        "web-vitals": "^1.0.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "watch:sass": "node-sass src/sass/main.scss src/css/style.comp.css -w",
        "compile:sass": "node-sass src/sass/main.scss src/css/style.comp.css",
        "concat:css": "concat -o src/css/style.concat.css src/css/icon-style.css src/css/style.comp.css",
        "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' src/css/style.concat.css -o src/css/style.prefix.css",
        "compress:css": "node-sass src/css/style.prefix.css src/css/style.css --output-style compressed",
        "build:css": "npm run compile:sass && npm run concat:css && npm run prefix:css && npm run compress:css"
    },
    "proxy": "http://127.0.0.1:8000",
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/react-redux": "^7.1.20",
        "@types/react-router-dom": "^5.3.3",
        "@types/redux": "^3.6.0",
        "@types/uuid": "^8.3.4",
        "node-sass": "^7.0.0"
    }
}
