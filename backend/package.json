{
    "name": "spaceboo-app",
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "",
        "roots": [
            "tests/"
        ],
        "testRegex": ".*\\.spec\\.ts$",
        "testEnvironment": "node",
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage"
    },
    "version": "1.0.0",
    "description": "Spaceboo - the world's first spacesharing platform",
    "main": "server.js",
    "type": "commonjs",
    "scripts": {
        "start": "node dist/server.js",
        "client": "npm run start --prefix ../frontend",
        "client:install": "npm install --prefix ../frontend",
        "client:build": "npm run build --prefix ../frontend",
        "client-css:build": "npm run build:css --prefix ../frontend",
        "client-sass:watch": "npm run watch:sass --prefix ../frontend",
        "server": "nodemon server.ts --ignore ./frontend",
        "dev": "concurrently \"npm run client\" \"npm run server\" \"npm run client-sass:watch\"",
        "test": "jest --no-cache --detectOpenHandles",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:e2e": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sukiasian/spaceboo.git"
    },
    "keywords": [
        "spaceboo",
        "spacesharing"
    ],
    "author": "Sam Sukiasian",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/sukiasian/spaceboo/issues"
    },
    "homepage": "https://github.com/sukiasian/spaceboo#readme",
    "dependencies": {
        "@types/bcrypt": "^5.0.0",
        "bcrypt": "^5.0.1",
        "cookie-parser": "^1.4.6",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose-validator": "^2.1.0",
        "multer": "^1.4.3",
        "nodemailer": "^6.6.0",
        "passport": "^0.4.1",
        "passport-facebook": "^3.0.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "passport-odnoklassniki": "^0.2.0",
        "passport-vkontakte": "^0.5.0",
        "pg": "^8.7.1",
        "pm2": "^5.1.1",
        "pug": "^3.0.2",
        "reflect-metadata": "^0.1.13",
        "sequelize": "^6.6.5"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.2",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.13",
        "@types/faker": "^5.5.8",
        "@types/jest": "^27.0.2",
        "@types/jsonwebtoken": "^8.5.4",
        "@types/multer": "^1.4.7",
        "@types/nodemailer": "^6.4.4",
        "@types/passport": "^1.0.7",
        "@types/passport-facebook": "^2.1.11",
        "@types/passport-jwt": "^3.0.6",
        "@types/passport-local": "^1.0.34",
        "@types/passport-vkontakte": "^1.3.1",
        "@types/pug": "^2.0.5",
        "@types/sequelize": "^4.28.10",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^8.3.3",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "concurrently": "^6.1.0",
        "create-react-app": "^4.0.3",
        "dotenv": "^9.0.2",
        "eslint": "^7.32.0",
        "eslint-config-node": "^4.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.23.2",
        "faker": "^5.5.3",
        "jest": "^27.2.5",
        "jest-cli": "^27.2.5",
        "node-sass": "^6.0.0",
        "nodemon": "^2.0.12",
        "prettier": "^2.3.2",
        "prettier-config": "github:sukiasian/prettier-config",
        "sequelize-typescript": "^2.1.0",
        "supertest": "^6.1.6",
        "ts-jest": "^27.0.5",
        "typescript": "^4.4.4",
        "winston": "^3.3.3"
    }
}
